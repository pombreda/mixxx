<Template>
  <WidgetGroup trigger="[Samplers],show_samplers">
    <ObjectName>SamplerDecksContainer</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

      <Template src="skin:components/sampler/sampler.xml">
        <SetVariable name="samplernum">1</SetVariable>
      </Template>

      <Template src="skin:components/sampler/sampler.xml">
        <SetVariable name="samplernum">2</SetVariable>
      </Template>

      <Template src="skin:components/sampler/sampler.xml">
        <SetVariable name="samplernum">3</SetVariable>
      </Template>

      <Template src="skin:components/sampler/sampler.xml">
        <SetVariable name="samplernum">4</SetVariable>
      </Template>

    </Children>

    <Connection>
      <ConfigKey persist="true">[Samplers],show_samplers</ConfigKey>
      <BindProperty>visible</BindProperty>
    </Connection>

  </WidgetGroup>
</Template>
