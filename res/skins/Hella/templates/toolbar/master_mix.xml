<?xml version="1.0"?>
<Template>
  <WidgetGroup>
    <ObjectName>MasterControls</ObjectName>
    <SizePolicy>max,min</SizePolicy>
    <MinimumSize>240,25</MinimumSize>
    <Layout>horizontal</Layout>
    <Children>

      <WidgetGroup>
        <ObjectName>HeadphonesVolume</ObjectName>
        <SizePolicy>f,f</SizePolicy>
        <MinimumSize>60,25</MinimumSize>
        <Layout>vertical</Layout>
        <Children>
          <Knob>
            <TooltipId>headphone_volume</TooltipId>
            <Style/>
            <NumberStates>64</NumberStates>
            <Path>knobs/knob_rotary_s%1.png</Path>
            <Connection>
              <ConfigKey>[Master],headVolume</ConfigKey>
            </Connection>
          </Knob>
          <Label>
            <ObjectName>KnobLabel</ObjectName>
            <Text>Monitor</Text>
          </Label>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>HeadPhonexMix</ObjectName>
        <SizePolicy>f,f</SizePolicy>
        <MinimumSize>60,25</MinimumSize>
        <Layout>vertical</Layout>
        <Children>
          <Knob>
            <TooltipId>headMix</TooltipId>
            <Style/>
            <NumberStates>64</NumberStates>
            <Path>knobs/knob_rotary_s%1.png</Path>
            <Connection>
              <ConfigKey>[Master],headMix</ConfigKey>
            </Connection>
          </Knob>
          <Label>
            <ObjectName>KnobLabel</ObjectName>
            <Text>Mix</Text>
          </Label>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>Balance</ObjectName>
        <SizePolicy>f,f</SizePolicy>
        <MinimumSize>60,25</MinimumSize>
        <Layout>vertical</Layout>
        <Children>

          <Knob>
            <TooltipId>balance</TooltipId>
            <Style/>
            <NumberStates>63</NumberStates>
            <Path>knobs/knob_rotary_s%1.png</Path>
            <Connection>
              <ConfigKey>[Master],balance</ConfigKey>
            </Connection>
          </Knob>
          <Label>
            <ObjectName>KnobLabel</ObjectName>
            <Text>Balance</Text>
          </Label>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>MasterVolume</ObjectName>
        <SizePolicy>f,f</SizePolicy>
        <MinimumSize>60,25</MinimumSize>
        <Layout>vertical</Layout>
        <Children>
          <Knob>
            <TooltipId>master_volume</TooltipId>
            <Style/>
            <NumberStates>64</NumberStates>
            <Path>knobs/knob_rotary_s%1.png</Path>
            <Connection>
              <ConfigKey>[Master],volume</ConfigKey>
            </Connection>
          </Knob>
          <Label>
            <ObjectName>KnobLabel</ObjectName>
            <Text>Master</Text>
          </Label>
        </Children>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
