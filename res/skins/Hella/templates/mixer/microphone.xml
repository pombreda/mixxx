<Template>
  <WidgetGroup>
    <ObjectName>MicrophoneControlsContainer</ObjectName>
    <Layout>horizontal</Layout>
    <SizePolicy>me,min</SizePolicy>
    <Children>

      <WidgetGroup>
        <ObjectName>MicrophoneTalkover</ObjectName>
        <Layout>horizontal</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <PushButton>
            <TooltipId>microphone_talkover</TooltipId>
            <NumberStates>2</NumberStates>
            <State>
              <Number>0</Number>
              <Pressed>images/microphone/talkover/down.png</Pressed>
              <Unpressed>images/microphone/talkover/back.png</Unpressed>
            </State>
            <State>
              <Number>1</Number>
              <Pressed>images/microphone/talkover/overdown.png</Pressed>
              <Unpressed>images/microphone/talkover/over.png</Unpressed>
            </State>
            <Connection>
              <ConfigKey>[Microphone],talkover</ConfigKey>
              <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
              <ButtonState>LeftButton</ButtonState>
            </Connection>
          </PushButton>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>MicrophoneVolume</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <Knob>
            <TooltipId>microphone_volume</TooltipId>
            <NumberStates>64</NumberStates>
            <Path>knobs/knob_rotary_s%1.png</Path>
            <Connection>
              <ConfigKey>[Microphone],volume</ConfigKey>
            </Connection>
          </Knob>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>MicrophoneOrientation</ObjectName>
        <Layout>vertical</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>
          <PushButton>
            <TooltipId>orientation</TooltipId>
            <Style></Style>
            <NumberStates>3</NumberStates>
            <State>
              <Number>0</Number>
              <Pressed>images/microphone/orientation/left_over.png</Pressed>
              <Unpressed>images/microphone/orientation/left_over.png</Unpressed>
            </State>
            <State>
              <Number>1</Number>
              <Pressed>images/microphone/orientation/master.png</Pressed>
              <Unpressed>images/microphone/orientation/master.png</Unpressed>
            </State>
            <State>
              <Number>2</Number>
              <Pressed>images/microphone/orientation/right_over.png</Pressed>
              <Unpressed>images/microphone/orientation/right_over.png</Unpressed>
            </State>
            <Connection>
              <ConfigKey>[Microphone],orientation</ConfigKey>
              <EmitOnDownPress>true</EmitOnDownPress>
              <ButtonState>LeftButton</ButtonState>
            </Connection>
          </PushButton>
        </Children>
      </WidgetGroup>

      <WidgetGroup>
        <ObjectName>MicrophoneVUMeter</ObjectName>
        <Layout>horizontal</Layout>
        <SizePolicy>min,min</SizePolicy>
        <Children>

          <VuMeter>
            <TooltipId>microphone_VuMeter</TooltipId>
            <PathVu>images/volume/horizontal/over.png</PathVu>
            <PathBack>images/volume/horizontal/back.png</PathBack>
            <Horizontal>false</Horizontal>
            <PeakHoldSize>5</PeakHoldSize>
            <PeakHoldTime>500</PeakHoldTime>
            <PeakFallTime>50</PeakFallTime>
            <PeakFallStep>2</PeakFallStep>
            <Connection>
              <ConfigKey>[Microphone],VuMeter</ConfigKey>
            </Connection>
          </VuMeter>

          <StatusLight>
            <TooltipId>PeakIndicator</TooltipId>
            <PathStatusLight>images/volume/horizontal/over_clip.png</PathStatusLight>
            <PathBack>images/volume/horizontal/clip.png</PathBack>
            <Horizontal>false</Horizontal>
            <Connection>
              <ConfigKey>[Microphone],PeakIndicator</ConfigKey>
            </Connection>
          </StatusLight>

        </Children>
      </WidgetGroup>

    </Children>
  </WidgetGroup>
</Template>
